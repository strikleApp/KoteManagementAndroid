<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_soldiers_dialog"
    tools:context=".fragments.inventory.IssueWeaponDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_13sdp"
        android:id="@+id/clDailog">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weapon_name"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/tv1"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial Number"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/tv1"/>

        <TextView
            android:id="@+id/tvSerialNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintStart_toStartOf="@id/tvName"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weapon_type"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/tv2"
            app:layout_constraintTop_toBottomOf="@id/tv2"/>

        <TextView
            android:id="@+id/tvWeaaponType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintStart_toStartOf="@id/tvSerialNum" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issued To:"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="@id/tv3"/>

        <TextView
            android:id="@+id/tvIssuedTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintStart_toStartOf="@id/tvWeaaponType" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tvIssuedTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />








    </androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>